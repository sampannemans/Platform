<%- include("partials/header"); -%>
<body class="sb-nav-fixed">
<%- include("partials/navigation"); -%>

<div id="layoutSidenav_content">
  <main>
      <div class="container-fluid">
          <h3 class="mt-4">Notes</h3>
          <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/notes">Notes</a></li>
              <li class="breadcrumb-item active"><%= noteTitle %></li>
          </ol>
          <div class="card mb-4">
              <div class="card-body">
                <p><strong>Subject: </strong><%= noteSubject %></p>
                <h5><%= noteTitle %></h5>
                <p><%- noteContent %></p>
              </div>
          </div>

          <div class="page-section">
            <form action="/notes/deleted" method="post">
              <div>
                <span class="delete-confirm">Are you sure you want to delete this note?</span></br>
              </div>
              <div class="page-section">
                <button class="btn btn-danger" type="submit" name="noteDelete" value="<%=noteId%>">Delete</button>
                <a class="btn btn-secondary" href="/notes/<%=noteId%>">Cancel</a>
              </div>
            </form>
          </div>

      </div>
  </main>

<%- include("partials/footer"); -%>
