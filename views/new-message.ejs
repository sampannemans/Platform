<%- include("partials/header"); -%>
<body class="sb-nav-fixed">
<%- include("partials/navigation"); -%>

<div id="layoutSidenav_content">
  <main>
      <div class="container-fluid">
          <h3 class="mt-4">Create a new message</h3>
          <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/messages">Messages</a></li>
              <li class="breadcrumb-item active">Create a new message</li>
          </ol>

          <div class="page-section">
            <form action="/post-message" method="post">
              <div class="page-section">
                <strong>Title</strong>
                <input class="form-control py-4" name="messageTitle" type="text"/>
              </div>
              <div class="page-section">
                <strong>Content</strong>
                <textarea name="messageContent">Hello, World!</textarea>
              </div>
              <div class="page-section">
                <button class="btn btn-primary" type="submit" name="submit">Save message</button>
                <a class="btn btn-secondary" href="/messages">Cancel</a>
              </div>
            </form>
            <script>
              tinymce.init({
                selector: 'textarea',
                plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
                statusbar: false
              });
            </script>
          </div>

      </div>
  </main>

<%- include("partials/footer"); -%>
