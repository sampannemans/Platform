<%- include("partials/header"); -%>
<body class="sb-nav-fixed">
<%- include("partials/navigation"); -%>

<div id="layoutSidenav_content">
  <main>
      <div class="container-fluid">
          <h3 class="mt-4">Notes</h3>
          <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/notes">Notes</a></li>
              <li class="breadcrumb-item active"><%= noteTitle %></li>
          </ol>

          <div class="page-section">
            <form action="/notes/<%=noteId%>/updated" method="post">
              <div class="page-section">
                <strong>Subject</strong>
                <input type="hidden" name="originalNoteSubject" value="<%=noteSubject%>">
                <input class="form-control py-4" name="newNoteSubject" type="text" value="<%=noteSubject%>"/>
              </div>
              <div class="page-section">
                <strong>Title</strong>
                <input type="hidden" name="originalNoteTitle" value="<%=noteTitle%>">
                <input class="form-control py-4" name="newNoteTitle" type="text" value="<%=noteTitle%>"/>
              </div>
              <div class="page-section">
                <strong>Content</strong>
                <textarea name="originalNoteContent" style="display:none;"><%-noteContent%></textarea>
                <textarea name="newNoteContent"><%-noteContent%></textarea>
              </div>
              <div class="page-section">
                <button class="btn btn-primary" type="submit" name="submit">Save changes</button>
                <a class="btn btn-secondary" href="/notes/<%=noteId%>">Cancel</a>
              </div>
            </form>
            <script>
              tinymce.init({
                selector: 'textarea',
                plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
                statusbar: false
              });
            </script>
          </div>

      </div>
  </main>

<%- include("partials/footer"); -%>
