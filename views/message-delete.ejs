<%- include("partials/header"); -%>
<body class="sb-nav-fixed">
<%- include("partials/navigation"); -%>

<div id="layoutSidenav_content">
  <main>
      <div class="container-fluid">
          <h3 class="mt-4">Messages</h3>
          <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/messages">Messages</a></li>
              <li class="breadcrumb-item active"><%= messageTitle %></li>
          </ol>
          <div class="card mb-4">
              <div class="card-body">
                <h5><%= messageTitle %></h5>
                <p><%- messageContent %></p>
              </div>
          </div>

          <div class="page-section">
            <form action="/messages/deleted" method="post">
              <div>
                <span class="delete-confirm">Are you sure you want to delete this message?</span></br>
              </div>
              <div class="page-section">
                <button class="btn btn-danger" type="submit" name="messageDelete" value="<%=messageId%>">Delete</button>
                <a class="btn btn-secondary" href="/messages/<%=messageId%>">Cancel</a>
              </div>
            </form>
          </div>

      </div>
  </main>

<%- include("partials/footer"); -%>
