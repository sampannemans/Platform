<%# Navigation and Content - see https://github.com/StartBootstrap/startbootstrap-sb-admin/blob/master/dist/layout-sidenav-light.html %>

<%- include("partials/header"); -%>
<body class="sb-nav-fixed">
<%- include("partials/navigation"); -%>

  <div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h3 class="mt-4"><%=teamName%></h3>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/teams">Teams</a></li>
                <li class="breadcrumb-item active"><%=teamName%></li>
            </ol>

            <div class="page-section">
              <ul class="list-unstyled">
                <li><strong>Team name:</strong> <%=teamName%></li>
                <li><strong>Team ID:</strong> <%=teamId%></li>
              </ul>
            </div>
            <div class="page-section">
              <strong>Users in this team:</strong>
              <ul class="list-unstyled">
                <% users.forEach(function(user) { %>
                  <li><a href="/users/<%=user._id%>"><%= user.firstName %> <%= user.lastName %></a></li>
                <% }); %>
              </ul>
            </div>

            <div class="page-section">
              <form action="/teams/<%=teamName%>" method="post">
                <button class="btn btn-primary" type="submit" name="submitEdit" formaction="/teams/<%=teamId%>/edit" value="<%=teamName%>">Edit</button>
                <button class="btn btn-danger" type="submit" name="submitDelete" formaction="/teams/<%=teamId%>/delete" value="<%=teamName%>">Delete</button>
              </form>
            </div>

        </div>
    </main>

<%- include("partials/footer"); -%>
